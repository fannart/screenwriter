@model Screenwriter.ViewModels.MediaViewModel

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@Html.ValidationSummary(true)
		@Html.HiddenFor(model => model.Media.ID)
		<div class="form-group">
			@Html.LabelFor(model => model.MediaLanguage, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("Media.LanguageID", Model.Languages)
				@Html.ValidationMessageFor(model => model.MediaLanguage)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.Title, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Media.Title)
				@Html.ValidationMessageFor(model => model.Media.Title)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.Type, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownList("Media.Type", Model.MediaTypes)
				@Html.ValidationMessageFor(model => model.Media.Type)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.length, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Media.length) minutes
				@Html.ValidationMessageFor(model => model.Media.length)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.YoutubeIdentifier, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Media.YoutubeIdentifier)
				@Html.ValidationMessageFor(model => model.Media.YoutubeIdentifier)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.publishDate, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Media.publishDate)
				@Html.ValidationMessageFor(model => model.Media.publishDate)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.ImdbURL, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Media.ImdbURL)
				@Html.ValidationMessageFor(model => model.Media.ImdbURL)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.Season, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Media.Season)
				@Html.ValidationMessageFor(model => model.Media.Season)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.Episode, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Media.Episode)
				@Html.ValidationMessageFor(model => model.Media.Episode)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.Course, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Media.Course)
				@Html.ValidationMessageFor(model => model.Media.Course)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.School, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Media.School)
				@Html.ValidationMessageFor(model => model.Media.School)
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Media.Lecturer, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Media.Lecturer)
				@Html.ValidationMessageFor(model => model.Media.Lecturer)
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
