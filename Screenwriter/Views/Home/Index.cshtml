@{
    ViewBag.Title = "Home Page";
}
<style>
    .row
    {
        padding: 5px;
    }

    table,td
    {
        width:100%;
        height:50px;
        padding: 15px;
        table-layout:fixed;
    }
    #introduction
    {
        border: 2px solid black;
        position:relative;
        left:-110px;
        top:-5px;
    }
    #textboxinput
    {
        height:30px;
        width:600px;
    }
    #languagecategories
    {
        text-align:center;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-8" id="introduction">
            <h1>Instructions</h1>
            <ol>
                <li>
                <p>Search for your desired title in the search box below</p>
                </li>
                <li>
                <p>If it exists you will be presented with the option to download the text file that includes the subtitles. Click the download button</p>
                </li>
                <li>
                <p>If your desired title has not been translated yet, you will be presented with pending requests or you can request the title yourself</p>
                </li>
                <li>
                <p>If you did not find your title you can browse through the most popular list and see if you find a title there that interests you</p>
                </li>
            </ol>
        </div>
        <div class="col-md-4">
            <div class="col-md-6">
                <form method="post" action="LoggedInHomePage">
                    <h3>Login</h3>
                    <label accesskey="U" for="User">User name</label>
                    <input type="text" name="User" id="User"/>
                    <label accesskey="P" for="Pass">Password</label>
                    <input type="password" id="Pass" name="Pass"/>
                    <input type="submit" value="Log in" />
                    <p>Login with</p>
                    <button>Facebook</button>
                    <button>Google</button>
                </form>
            </div>
            <div class="col-md-6">
                <form>
                    <h3>Register</h3>
                    @Html.ActionLink("Sign up here", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                    <p>You can also register via</p>
                    <button>Facebook</button><br />
                    <button>Google</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-4">
            <input type="text" id= textboxinput />
            @Html.ActionLink("Search", "SearchResults", "Home")
        </div>
    </div>
</div>

